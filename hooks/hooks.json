{
  "description": "emdx plugin hooks: environment check on session start, auto-save subagent output",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ensure-emdx.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "Explore|general-purpose|Plan",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/save-subagent-output.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
