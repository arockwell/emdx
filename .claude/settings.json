{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/prime.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/save-output.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-end.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "PreToolUse": [],
    "SubagentStop": [
      {
        "matcher": "Explore|general-purpose|Plan",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/save-subagent-output.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
